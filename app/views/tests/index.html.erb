<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h1>Listing tests</h1>
    </div>
  </div>
  <div class="panel-body">
    <table>
      <thead>
        <tr>
          <th>Image</th>
          <th>Description</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>     
        <% @tests.each do |test| %>
          <tr class="well">
              <td><%= image_tag test.image.url(:medium) %></td>
              <td><%= test.description %></td>
              <td><%= test.user.email if test.user %></td>
              <td><%= link_to 'Show', test, class: "btn btn-default" %></td>
              <% if test.user == current_user %>
                <td><%= link_to 'Edit', edit_test_path(test), class: "btn btn-default" %></td>
                <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
  <div class="panel-footer">
    <% if user_signed_in? %>
      <%= link_to 'New Test', new_test_path %>
    <% end %>
  </div>
</div>
